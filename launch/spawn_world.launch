<?xml version="1.0"?>
<launch>
    <arg name="gui" default="true"/>
    <arg name="debug" default="false"/>
    <arg name="world_name" default=""/>
    <arg name="model_name" default=""/>" <!-- Note: the world_name is with respect to GAZEBO_RESOURCE_PATH environmental variable -->
	
    <remap from="turtle_and_rs/odom" to="odom"/>
    <!-- We resume the logic in empty_world.launch, changing only the name of the world to be launched -->
    <include file="$(find gazebo_ros)/launch/empty_world.launch">
        <arg name="world_name" value="$(arg world_name)"/>
        <arg name="paused" value="false"/>
        <arg name="use_sim_time" value="true"/>
        <arg name="gui" value="$(arg gui)"/>
        <arg name="debug" value="$(arg debug)"/>
        <arg name="headless" value="false"/> <!-- Inert - see gazebo_ros_pkgs issue #491 -->
        <arg name="recording" value="false"/>
</include>

	<node name="mybot_spawn" pkg="gazebo_ros" type="spawn_model" output="screen"
		args="-database $(arg model_name) -sdf -model $(arg model_name) -x 0 -y 0 -z 0" >
	</node>

</launch>
